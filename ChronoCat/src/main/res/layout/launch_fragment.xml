<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="45"
            android:background="@drawable/launch_bg_top"
            android:gravity="center_vertical">
        <ImageView
                android:id="@+id/load_screen_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/launch_title"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="55"
            android:gravity="bottom"
            android:background="@color/launch_main_bg">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/launch_cat"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/launch_clock"/>

        <ImageView
                android:id="@+id/hour_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/launch_hour_arrow"/>

        <ImageView
                android:id="@+id/minute_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/launch_minute_arrow"/>
    </RelativeLayout>

</LinearLayout>
